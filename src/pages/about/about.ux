<template>
	<div class="container">
		<!-- 统一顶部区域样式 -->
		<!-- 感谢Charlie_Q提供的弧形时间,由OrPudding移植圆表 -->
		<div class="header" @click="backToHome">
			<text class="time time1">{{ time[0] }}</text>
			<text class="time time2">{{ time[1] }}</text>
			<text class="time time3">{{ ":" }}</text>
			<text class="time time4">{{ time[2] }}</text>
			<text class="time time5">{{ time[3] }}</text>
			<text class="pagetitle">{{ title }}</text>
		</div>

		<!-- 应用信息区域 -->
		<div class="app-info">
			<image src="/common/icon.png" class="app-icon"></image>
			<div class="app-details">
				<text class="app-name">{{ appInfo.name }}</text>
				<text class="app-version">{{ appInfo.version }}</text>
			</div>
		</div>

		<div class="developer-columns">
			<div class="developer-column">
				<text class="section-title">文本</text>
				<text class="developer">@棍母</text>
			</div>
			<div class="developer-column">
				<text class="section-title">美术</text>
				<text class="developer">@棍母</text>
			</div>
			<div class="developer-column">
				<text class="section-title">音乐</text>
				<text class="developer">@棍母</text>
			</div>
		</div>

		<!-- 开发者区域 - 改为两列布局 -->
		<div class="developer-columns">
			<div class="developer-column">
				<text class="section-title">引擎</text>
				<text class="developer">@OrPudding</text>
			</div>
			<div class="developer-column">
				<text class="section-title">UI参考</text>
				<text class="developer">@无源流沙</text>
			</div>
		</div>
		<!-- 网站信息 -->
		<text class="website-info">更多资源请访问</text>
		<text class="website-url">bandbbs.cn</text>
		<text class="website-url">astrobox.online</text>

		<!-- 版权信息 -->
		<div class="copyright">
			<text class="section-title">引擎版权信息</text>
			<text class="copyright-line">Powered by BandTwine</text>
			<text class="copyright-line" onclick="clicked">
				Copyright © 2025 OrPudding.
			</text>
			<text class="copyright-line">All Rights Reserved</text>
		</div>
	</div>
</template>

<script>
import router from "@system.router";
import app from "@system.app";
import prompt from "@system.prompt";

export default {
	private: {
		time: [0, 0, 0, 0],
		title: "关于",
		appInfo: {
			name: "程序名",
			version: "1.0",
		},
		clickCount: 1,
	},

	onInit() {
		// 获取应用信息
		try {
			const info = app.getInfo();
			this.appInfo.name = info.name || "程序名";
			this.appInfo.version = info.versionName || "1.0";
		} catch (e) {
			prompt.showToast({ message: "应用信息加载失败" });
		}

		// 更新时间
		this.updateTime();
		setInterval(() => this.updateTime(), 60000);
	},

	updateTime() {
		const now = new Date();
		const hours = now.getHours().toString().padStart(2, "0");
		const minutes = now.getMinutes().toString().padStart(2, "0");

		// 更新为index页的时间处理逻辑
		this.time = [
			hours[0], // 小时十位
			hours[1], // 小时个位
			minutes[0], // 分钟十位
			minutes[1], // 分钟个位
		];
	},

	clicked() {
		if (this.clickCount < 2) {
			this.clickCount++;
		} else {
			this.clickCount = 0;
			router.push({
				uri: "pages/advanced",
			});
		}
	},

	backToHome() {
		router.push({
			uri: "pages/index",
			params: {
				___PARAM_LAUNCH_FLAG___: "clearTask",
			},
		});
	},
};
</script>

<style>
@import "../../common/comm.css";

